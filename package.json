{
	"name": "nuxt-app",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "rimraf .output && prisma generate && nuxt build && pnpm run deploy",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"migrate": "prisma migrate dev --name",
		"deploy": "node scripts/create-deploy.mjs",
		"db:gui": "prisma studio",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"start": "node .output/server/index.mjs",
		"deps": "npx taze major",
		"lint:js": "eslint --ext \".ts,.vue\" --ignore-path .gitignore .",
		"lint:prettier": "prettier --check .",
		"lint": "pnpm lint:js && pnpm lint:prettier",
		"lintfix": "prettier --write --list-different . && pnpm lint:js --fix",
		"e2e:test": "cypress run",
		"test": "vitest run"
	},
	"devDependencies": {
		"@nuxt/devtools": "latest",
		"@nuxt/test-utils": "^3.6.5",
		"@nuxtjs/color-mode": "^3.3.0",
		"@nuxtjs/eslint-config-typescript": "^12.0.0",
		"@nuxtjs/i18n": "8.0.0-beta.13",
		"@nuxtjs/tailwindcss": "^6.8.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/node": "^20.4.2",
		"@types/remove-markdown": "^0.3.1",
		"@typescript-eslint/parser": "^6.1.0",
		"bcryptjs": "^2.4.3",
		"cypress": "^12.17.1",
		"daisyui": "^3.2.1",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-vue": "^9.15.1",
		"nuxt": "^3.6.5",
		"nuxt-icon": "^0.4.2",
		"prettier": "^3.0.0",
		"prisma": "^5.0.0",
		"remove-markdown": "^0.5.0",
		"sass": "^1.64.0",
		"taze": "^0.11.2",
		"typescript": "^5.1.6",
		"vitest": "^0.32.0"
	},
	"dependencies": {
		"@bytemd/plugin-breaks": "^1.21.0",
		"@bytemd/plugin-frontmatter": "^1.21.0",
		"@bytemd/plugin-gfm": "^1.21.0",
		"@editorjs/editorjs": "^2.27.2",
		"@pinia/nuxt": "^0.4.11",
		"@prisma/client": "5.0.0",
		"@tailwindcss/typography": "^0.5.9",
		"bytemd": "^1.21.0",
		"cursor-effects": "^1.0.11",
		"gray-matter": "^4.0.3",
		"h3-formidable": "^0.3.8",
		"juejin-markdown-themes": "^1.29.7",
		"log4js": "^6.9.1",
		"pinia": "^2.1.4",
		"remark-directive": "^2.0.1",
		"rimraf": "^5.0.1",
		"vue3-toastify": "^0.1.11"
	}
}
